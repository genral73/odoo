<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_cover" name="Cover">
    <section class="s_cover parallax s_parallax_is_fixed bg-black-50 o_half_screen_height" data-scroll-background-ratio="1">
        <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_cover_default_image'); background-position: 50% 0;"/>
        <div class="container s_allow_columns">
            <div class="s_cover_box text-center lead">
                <h1><font style="font-size: 62px;">Catchy Headline</font></h1>
                <p>Write one or two paragraphs describing your product, services or a specific feature.<br/> To be successful your content needs to be useful to your readers.</p>
                <p><br/></p>
                <p>
                    <a href="/aboutus" class="btn btn-alpha">About us</a>
                    <a href="/contactus" class="btn btn-beta">Contact us</a>
                </p>
            </div>
        </div>
    </section>
</template>

<template id="s_banner_options" inherit_id="website.snippet_options">
    <xpath expr="." position="inside">
        <div id="so_cover_text_style" data-selector=".s_cover" data-target=".s_cover_box">
            <we-select string="Paragraph">
                <we-button data-select-class="small">Small</we-button>
                <we-button data-select-class="">Medium</we-button>
                <we-button data-select-class="lead">Large</we-button>
            </we-select>
        </div>
    </xpath>
</template>

</odoo>
