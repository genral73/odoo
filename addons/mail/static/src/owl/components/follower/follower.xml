<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.component.Follower" owl="1">
        <div class="o_Follower">
            <a class="o_Follower_details" href="#" t-att-class="{ 'o-inactive': !storeProps.follower.isActive }" t-on-click="_onClickDetails">
                <img class="o_Follower_avatar" t-attf-src="web/image/{{resModel}}/{{resId}}/image_128"/>
                <span class="o_Follower_name" t-esc="storeProps.follower.name"/>
            </a>
            <t t-if="storeProps.follower.isEditable">
                <button class="btn btn-icon o_Follower_button o_Follower_editButton" title="Edit subscription" aria-label="Edit subscription" t-on-click="_onClickEdit">
                    <i class="fa fa-pencil"/>
                </button>
                <button class="btn btn-icon o_Follower_button o_Follower_removeButton" title="Remove this follower" aria-label="Remove this follower" t-on-click="_onClickRemove">
                    <i class="fa fa-remove"/>
                </button>
            </t>
        </div>
    </t>

</templates>
