<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.component.ChatterTopbar" owl="1">
        <div class="o_ChatterTopbar">
            <div class="o_ChatterTopbar_leftSection">
                <t t-if="storeProps.chatter.hasThread">
                    <button class="btn btn-link o_ChatterTopbar_buttonSendMessage"
                            type="button"
                            t-att-class="{
                                'o-active': storeProps.chatter.isComposerVisible and !storeProps.chatter.isComposerLog,
                            }"
                            t-att-disabled="storeProps.chatter.isDisabled"
                            t-on-click="_onClickSendMessage">
                        Send message
                    </button>
                    <button class="btn btn-link o_ChatterTopbar_buttonLogNote"
                            type="button"
                            t-att-class="{
                                'o-active': storeProps.chatter.isComposerVisible and storeProps.chatter.isComposerLog,
                            }"
                            t-att-disabled="storeProps.chatter.isDisabled"
                            t-on-click="_onClickLogNote">
                        Log note
                    </button>
                </t>
                <t t-if="storeProps.chatter.hasActivities">
                    <button class="btn btn-link o_ChatterTopbar_buttonScheduleActivity" type="button" t-att-disabled="storeProps.chatter.isDisabled" t-on-click="_onClickScheduleActivity">
                        <i class="fa fa-clock-o"/>
                        Schedule activity
                    </button>
                </t>
                <button class="btn btn-link o_ChatterTopbar_buttonAttachments" type="button" t-att-disabled="storeProps.chatter.isDisabled" t-on-click="_onClickAttachments">
                    <i class="fa fa-paperclip"/>
                    <t t-if="storeProps.chatter.isDisabled or storeProps.areAttachmentsLoaded">
                        <span class="o_ChatterTopbar_buttonCount o_ChatterTopbar_buttonAttachmentsCount" t-esc="storeProps.attachmentsAmount"/>
                    </t>
                    <t t-else="">
                        <i class="o_ChatterTopbar_buttonAttachmentsCountLoader fa fa-spinner fa-spin"/>
                    </t>
                </button>
            </div>
            <div class="o_ChatterTopbar_rightSection">
                <t t-if="storeProps.chatter.hasFollowers and storeProps.chatter.threadLocalId">
                    <FollowersMenu
                        isDisabled="storeProps.chatter.isDisabled"
                        threadLocalId="storeProps.chatter.threadLocalId"
                        class="o_ChatterTopbar_followersMenu"
                    />
                </t>
            </div>
        </div>
    </t>

</templates>
