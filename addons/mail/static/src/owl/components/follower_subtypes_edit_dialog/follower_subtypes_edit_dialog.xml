<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <div class="o_FollowerSubtypesEditDialog modal-dialog" t-name="mail.component.FollowerSubtypesEditDialog" owl="1">
        <div class="modal-content">
            <header class="modal-header">
                <h4 class="modal-title">
                    Edit Subscription of <t t-esc="storeProps.follower.name"/>
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" t-on-click="_onClickCancel">
                    Ã—
                </button>
            </header>
            <main class="modal-body">
                <div class="o_FollowerSubtypes">
                    <t t-foreach="storeProps.subtypes" t-as="subtype" t-key="subtype.id">
                        <FollowerSubtype
                            class="o_FollowerSubtypesEditDialog_followerSubtype"
                            followerLocalId="props.info.followerLocalId"
                            subtypeId="subtype.id"
                        />
                    </t>
                </div>
            </main>
            <div class="modal-footer">
                <button class="o-apply btn btn-primary" t-on-click="_onClickApply">
                    Apply
                </button>
                <button class="o-cancel btn btn-secondary" t-on-click="_onClickCancel">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</templates>
