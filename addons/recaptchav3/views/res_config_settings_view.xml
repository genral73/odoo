<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.recaptcha</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="website_recaptcha_warning" position="replace">
                <div attrs="{'invisible': [('module_recaptchav3', '=', False)]}">
                    <div class="mt8 row">
                        <div class="col-sm">
                            <field name="is_recaptcha_keys_set" invisible="1"/>
                            <div role="alert"
                                 attrs="{'invisible': [('is_recaptcha_keys_set', '=', False)]}">
                                <i class="text-success fa fa-check"></i> &amp;nbsp; Api keys set
                            </div>
                            <div role="alert"
                                 attrs="{'invisible': [('is_recaptcha_keys_set', '=', True)]}">
                                <i class="fa fa-exclamation-triangle text-warning"></i> &amp;nbsp; No api keys set
                            </div>
                        </div>
                        <div class="col-sm text-center"
                             attrs="{'invisible': [('is_recaptcha_keys_set', '=', False)]}">
                            <button class="btn btn-link"
                                    name="action_setup_recaptcha"
                                    type="object"><i class="fa fa-arrow-right"></i> Modify api keys</button>
                        </div>
                        <div class="col-sm text-center"
                             attrs="{'invisible': [('is_recaptcha_keys_set', '=', True)]}">
                            <button class="btn btn-link"
                                    name="action_setup_recaptcha"
                                    type="object"><i class="fa fa-arrow-right"></i> Set api keys</button>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

    <record id="recaptcha_api_key_wizard" model="ir.ui.view">
        <field name="name">recaptcha.authorization.wizard</field>
        <field name="model">res.config.settings</field>
        <field name="mode">primary</field>
        <field name="priority">2048</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <span>Generate your api keys and set it in the field below.</span>
                    <a href="https://www.google.com/recaptcha/admin/create" class="oe_link" target="_blank">
                        <i class="fa fa-arrow-right"/> Generate public/private keys
                    </a>
                </group>
                <group class="mt-3">
                    <field name="recaptcha_public_key" required="1"/>
                    <field name="recaptcha_private_key" required="1"/>
                    <field name="recaptcha_min_score" required="1"/>
                </group>
                <footer>
                    <button string="Confirm"
                            class="btn btn-primary"
                            name="confirm_setup_recaptcha"
                            type="object"/>
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
