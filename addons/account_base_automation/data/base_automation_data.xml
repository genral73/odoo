<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_invoice_paid" model="base.automation">
            <field name="name">Invoicing: action after invoice is paid</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="trigger">on_write</field>
            <field name="trigger_field_ids" eval="[(4, ref('account.field_account_move__invoice_payment_state'))]"/>
            <field name="filter_pre_domain">[('invoice_payment_state', 'not in', ['in_payment', 'paid'])]</field>
            <field name="filter_domain">[('invoice_payment_state', 'in', ['in_payment', 'paid'])]</field>
            <field name="state">code</field>
            <!-- keep the call to 'is_invoice' instead of including in the domain since an override could exist -->
            <field name="code" eval="'records.filtered(lambda r: r.is_invoice(include_receipts=True)).action_invoice_paid()'"/>
        </record>
    </data>
</odoo>
