<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="productVideo">
        <div class="embed-responsive embed-responsive-16by9 mt-2" t-if="embedCode">
            <t t-raw="embedCode"/>
        </div>
    </t>

    <t t-name="carouselIndicator">
        <li class="d-inline-block m-1 align-top o_wsale_product_new_img" data-target='#o-carousel-product' t-att-data-slide-to="index">
            <img class="img img-fluid" title="Dobule-click to edit" alt="Binary file" t-att-src="src" name="image_1920" border="1"/>
        </li>
    </t>

    <t t-name="carouselInnerItem">
        <div class="carousel-item h-100">
            <div class="d-flex align-items-center justify-content-center h-100">
                <img t-att-src="src" itemprop="image" class="img img-fluid product_detail_img mh-100" t-att-alt="alt"/>
            </div>
        </div>
    </t>

    <t t-name="productImageVideoUploder">
        <div class="container">
            <form class="clearfix">
                <div class="row o_wsale_product_image_modal">
                    <div class="col-md-6 col-xl-5 form-group">
                        <label>Image Name</label>
                        <h3><input type="text" class="form-control" name="name" t-att-value="name" placeholder="Image Name" required="1"/></h3>
                        <label>Video URL</label><br/>
                        <h3><input type="text" class="form-control" name="video_url"/></h3>
                    </div>
                    <div class="col-md-6 col-xl-7 form-group o_wsale_preview_container">
                        <div class="row">
                            <div class="col-5">
                                <div class="o_wsale_product_image_container">
                                    <div class="o_wsale_product_image">
                                        <img class="img img-fluid" title="Dobule-click to edit" alt="Binary file" src="/web/static/src/img/placeholder.png" name="image_1920" border="1"/>
                                        <div class="o_wsale_image_controls p-1">
                                            <button class="fa fa-pencil fa-lg float-left o_wsale_select_image_button" title="Edit" aria-label="Edit"></button>
                                            <button class="fa fa-trash-o fa-lg float-right o_wsale_clear_image_button" title="Clear" aria-label="Clear"></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-7">
                                <div class="text-center o_wsale_product_video_container">
                                    <div id="o_wsale_product_video_preview">
                                        <div class="o_wsale_product_video_preview_text">Video Preview</div>
                                        <iframe class="o_wsale_product_video_dialog_iframe" allowfullscreen="allowfullscreen" frameborder="0" src=""/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </t>

</templates>
