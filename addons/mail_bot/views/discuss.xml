<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-extend="mail.UserStatus">
        <t t-jquery="i:last" t-operation="after">
            <i t-if="status == 'bot'" class="o_mail_user_status o_user_online fa fa-heart" title="Bot" role="img" aria-label="User is a bot"/>
        </t>
    </t>

    <!--
        @param {mail.NotificationAlert} widget
    -->
    <t t-name="mail.NotificationAlert">
        <center class="o_notification_alert alert alert-primary" t-if="widget.isNotificationBlocked">
            Odoo Push notifications have been blocked. Go to your browser settings.
            <span t-if="widget.settingUrl" class="border border-primary mt-3 p-2 w-75 d-block font-italic text-left rounded position-relative">
                <t t-esc="widget.settingUrl"/>
                <button class="btn btn-sm btn-primary p-2 rounded-0 position-absolute o_clipboard_button" style="top:0;right:0;">
                    <span class="fa fa-clipboard"></span><span> Copy Link</span>
                </button>
            </span>
            <span t-if="widget.settingPath" class="d-block" t-esc="widget.settingPath"/>
        </center>
    </t>
</templates>
