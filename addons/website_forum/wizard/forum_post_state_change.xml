<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="forum_post_close_view_form" model="ir.ui.view">
    <field name="name">forum.post.close.wizard.form</field>
    <field name="model">forum.post.close</field>
    <field name="arch" type="xml">
        <form string="Close Post">
            <group>
                <group>
                    <field name="post_id" invisible="True"/>
                    <field name="close_reason" required="True"/>
                </group>
            </group>
            <footer>
                <button string="Save" type="object" name="close_with_reason" class="btn btn-primary"/>
                <button string="Cancel" special="cancel" type="object" class="btn btn-secondary"/>
            </footer>
        </form>
    </field>
</record>

<record id="forum_post_offensive_view_form" model="ir.ui.view">
    <field name="name">forum.post.offensive.wizard.form</field>
    <field name="model">forum.post.offensive</field>
    <field name="arch" type="xml">
        <form string="Offensive Post">
            <group>
                <group>
                    <field name="post_id" invisible="True"/>
                    <field name="offensive_reason" required="True"/>
                </group>
            </group>
            <footer>
                <button string="Save" type="object" name="mark_as_offensive_with_reason" class="btn btn-primary"/>
                <button string="Cancel" special="cancel" type="object" class="btn btn-secondary"/>
            </footer>
        </form>
    </field>
</record>

</odoo>
